<Window x:Class="DuAn_QuanLiKhachSan.PageChild.themPhong"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:DuAn_QuanLiKhachSan.PageChild"
        xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
        Title="themPhong" 
        Height="450" Width="800" WindowStyle="None" AllowsTransparency="True" Background="Transparent">
    
    <Border Background="{DynamicResource SecundaryBackgroundColor}"  CornerRadius="20" BorderThickness="2" BorderBrush="#7f7cf1">
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="40"/>
                <RowDefinition Height="30"/>
                <RowDefinition Height="260"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <StackPanel Grid.Row="0" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,0,8,0" Height="30" Orientation="Horizontal" FlowDirection="RightToLeft">
                <Button x:Name="btnClose" Style="{StaticResource IconButtonsStyle}" Content="{DynamicResource close}" Click="btnClose_Click" Tag="IsCloseButton"/>
                <Button x:Name="btnMinimize" Style="{DynamicResource IconButtonsStyle}" Content="{DynamicResource minimize}" Click="btnMinimize_Click"/>
            </StackPanel>

            <TextBlock Grid.Row="1" Text="THÊM PHÒNG MỚI" VerticalAlignment="Center" HorizontalAlignment="Center" FontSize="20" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
            <Grid Grid.Row="2">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="240"/>
                </Grid.ColumnDefinitions>
                <StackPanel Orientation="Vertical">
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <Label Content="MÃ PHÒNG" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                        <TextBox Tag="Mã phòng tự động" Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="360" FontSize="15" IsEnabled="False" Foreground="{DynamicResource PrimaryTextColor}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <Label Content="TÊN PHÒNG" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                        <TextBox Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="360" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <Label Content="LOẠI PHÒNG" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                        <ComboBox Tag="Nhập tên loại phòng" HorizontalAlignment="Left" Width="360" FontSize="15" Height="32" Foreground="{DynamicResource PrimaryTextColor}" Style="{DynamicResource ComboBoxFlatStyle}">
                            <ComboBoxItem Content="adfaf"/>
                            <ComboBoxItem Content="adfaf"/>
                            <ComboBoxItem Content="adfaf"/>
                        </ComboBox>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <Label Content="GHI CHÚ" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                        <TextBox Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="360" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}"/>
                    </StackPanel>
                </StackPanel>
                <StackPanel Orientation="Vertical" Grid.Column="1">
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <Label Content="GIÁ THEO GIỜ" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                        <TextBox Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="140" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <Label Content="GIÁ THEO NGÀY" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                        <TextBox Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="140" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}"/>
                    </StackPanel>
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <Label Content="KHU VỰC" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                        <TextBox Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="140" FontSize="15" Foreground="{DynamicResource PrimaryTextColor}"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
            <StackPanel Orientation="Horizontal" Grid.Row="3" HorizontalAlignment="Right" Margin="0 0 20 0">
                <Button Content="Lưu" Style="{DynamicResource MainBtn}"/>
                <Button Content="Xóa" Style="{DynamicResource MainBtn}"/>
            </StackPanel>

        </Grid>
    </Border>
</Window>
