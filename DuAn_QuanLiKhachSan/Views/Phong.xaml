                                                        <DataTrigger Binding="{Binding TinhTrang}" Value="Phòng đang thuê">
                                                            <Setter Property="Background" Value="#89B5CE"/>
                                                        </DataTrigger>
                                                        <DataTrigger Binding="{Binding TinhTrang}" Value="Phòng đã đặt">
                                                            <Setter Property="Background" Value="#E3E1D9"/>
                                                        </DataTrigger>
                                                    </Style.Triggers>
                                                </Style>
                                            </Grid.Style>
                                            <Grid.Clip>
                                                <RectangleGeometry Rect="0,0,280,160" RadiusX="10" RadiusY="10"/>
                                            </Grid.Clip>

                                            <Grid.RowDefinitions>
                                                <RowDefinition></RowDefinition>
                                                <RowDefinition Height="26"></RowDefinition>
                                            </Grid.RowDefinitions>
