                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="280"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <StackPanel Orientation="Vertical" Margin="20 0">
                    <Label Content="Tìm theo ngày" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                    <DatePicker Margin="10 0 20 5" Width="150" x:Name="dtpChonNgay"
               Padding="10 10 10 5"
               Style="{StaticResource MaterialDesignOutlinedDatePicker}" 
               FirstDayOfWeek="Monday" 
               Focusable="False" Foreground="{DynamicResource PrimaryTextColor}" FontSize="16" 
               Background="{DynamicResource SecundaryBackgroundColor}"/>

                </StackPanel>

                <StackPanel Orientation="Horizontal">
                    <StackPanel Orientation="Vertical" Margin="20 0">
                        <Label Content="Tìm theo giờ" FontWeight="Bold" Foreground="{DynamicResource PrimaryTextColor}"/>
                        <materialDesign:TimePicker x:Name="tpGio"
                         Style="{StaticResource MaterialDesignOutlinedTimePicker}"
                         Focusable="False" Padding="10 10 10 5" Foreground="{DynamicResource PrimaryTextColor}" FontSize="16" />

                    </StackPanel>
                </StackPanel>



                <StackPanel Orientation="Horizontal">
                    <TextBox x:Name="txt_searchRoom" Tag="Tìm phòng theo mã" Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="300" FontSize="15" Margin="20 0 0 0"/>
                    <fa:IconImage Icon="Search" Style="{DynamicResource Icon}" Height="26" Width="26" Margin="-40 0 0 0"/>
                </StackPanel>

            </StackPanel>
                <Button x:Name="btn_themPhong" Grid.Column="1" Content="THÊM MỚI" Style="{DynamicResource MainBtn}" Width="200" HorizontalAlignment="Left" Click="btn_themPhong_Click"/>
