<Page x:Class="DuAn_QuanLiKhachSan.Views.KhachHang"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:DuAn_QuanLiKhachSan.Views"
      Height="auto" Width="auto"
      xmlns:fa="http://schemas.awesome.incremented/wpf/xaml/fontawesome.sharp"
      xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes"
      Title="KhachHang">

    <Border>
        <Grid>
            <Grid.RowDefinitions>
                <RowDefinition Height="80"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>

            <StackPanel Orientation="Horizontal">
                <TextBox x:Name="txt_searchBill" Tag="Tìm tên khách hàng" Style="{DynamicResource TextBoxStyle}" HorizontalAlignment="Left" Width="300" FontSize="15"/>
                <fa:IconImage Icon="Search" Style="{DynamicResource Icon}" Height="26" Width="26" Margin="-40 0 0 0"/>
            </StackPanel>


            <DataGrid x:Name="dataGrid" Grid.Row="1" Grid.ColumnSpan="2" Style="{DynamicResource DataGridStyle1}"  CellStyle="{DynamicResource DataGridCellStyle1}" ColumnHeaderStyle="{DynamicResource DataGridColumnHeaderStyle1}" RowStyle="{DynamicResource DataGridRowStyle1}">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="MÃ KHÁCH HÀNG" Width="*" Binding="{Binding Name}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="TÊN KHÁCH HÀNG" Width="*" Binding="{Binding Value}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="SỐ CĂN CƯỚC" Width="*" Binding="{Binding Size}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="SỐ ĐIỆN THOẠI" Width="*" Binding="{Binding Price}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="ĐỊA CHỈ" Width="*" Binding="{Binding Price}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="GIỚI TÍNH" Width="*" Binding="{Binding Price}" IsReadOnly="True"/>
                    <DataGridTextColumn Header="QUỐC TỊCH" Width="*" Binding="{Binding Price}" IsReadOnly="True"/>
                    <DataGridTemplateColumn Header="TÙY CHỈNH" IsReadOnly="True" Width="auto">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <StackPanel Orientation="Horizontal">
                                    <Button Style="{StaticResource gridEditButton}">
                                        <fa:IconImage Icon="Pencil" Style="{StaticResource gridBtnIcon}"/>
                                    </Button>
                                    <Button Style="{StaticResource gridRemoveButton}">
                                        <fa:IconImage Icon="TrashCan" Style="{StaticResource gridBtnIcon}"/>
                                    </Button>
                                </StackPanel>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Grid>
    </Border>
</Page>
